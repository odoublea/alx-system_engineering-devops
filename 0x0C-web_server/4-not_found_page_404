#!/usr/bin/env bash
# Configure your Nginx to have a custom 404 page

sudo apt update && sudo apt upgrade -y
sudo apt-get install -y nginx

# Create an index.html file
echo "Hello World!" | sudo tee /var/www/html/index.html

# Configure redirect_me/
redir="redirect_me https://github.com/odoublea/"
sudo sed -i "listen 80 default_server/a rewrite ^/$redir permanent;" /etc/nginx/sites-available/default

# Configure custom 404 page
echo "Ceci n'est pas une page" | sudo tee /usr/share/nginx/html/404.html
err="listen 80 default_server;\n\terror_page 404 \/404.html;\n\tlocation = \/404.html {\n\t\troot \/var\/www\/html;\n\t\tinternal;\n\t}"
sudo sed -i "s/listen 80 default_server;/$err/" /etc/nginx/sites-enabled/default

#Restart Nginx server
sudo service nginx restart