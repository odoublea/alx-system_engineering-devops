#!/usr/bin/env bash
# Configure your Nginx to have a custom 404 page

echo "Ceci n'est pas une page" | sudo tee /usr/share/nginx/html/custom_404.html

# Configure Nginx to use the custom page
# sudo sed -i "s/error_page 404\/404.html;/error_page 404\/custom_404.html;/g" /etc/nginx/sites-available/default
# sudo sed -i "s/location = \/40x.html;/location = \/custom_404.html /g" /etc/nginx/sites-available/default

sudo sed -i "s/^\t\}$/\t\}\n\n\terror_page 404 \/404.html;/" /etc/nginx/sites-available/default
sudo ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default
# echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# Restart Nginx
sudo service nginx restart
